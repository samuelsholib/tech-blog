  <div class="wrapper">
    <header>
        <h1 class="has-text-black px-3 py-3 has-text-weight-bold">A CMS-style blog site: a tech blog</h1>
        <nav class="navbar mt-2">
            {{#if loggedIn}}
            <a href="/" class="navbar-item is-hoverable pt-1">homepage</a>
            <a href="../dashboard.handlebars" class="navbar-item is-hoverable pt-1">dashboard</a>
            <a href="../create-post.handlebars" class="navbar-item is-hoverable pt-1 mr-4">create post</a>
            <button id="logout" class="button is-danger">logout</button>
            {{else}}
            <a href="../homepage.handlebars" class="navbar-item is-hoverable pt-1">homepage</a>
            <a href="/login" class="button is-primary">login</a>
            {{/if}}
        </nav>
    </header>

    <main>
            {{{ body }}}
    </main>

    <footer class="footer rows pb-2">
